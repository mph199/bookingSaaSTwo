# Supabase Configuration
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
# IMPORTANT: Never commit real keys. Use the *service role* key on the backend only.
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY

# Fallback (not recommended when RLS is enabled):
# SUPABASE_KEY=your_supabase_anon_or_publishable_key_here

# JWT (required)
JWT_SECRET=change-me-long-random-secret

# CORS / URLs
# Used for CORS allow-list (e.g. Vercel URL) and for email verification links.
FRONTEND_URL=http://localhost:5173

# Public Base URL for links in emails (frontend URL)
PUBLIC_BASE_URL=http://localhost:5173

# Server Configuration
PORT=4000

# Optional bind host
HOST=0.0.0.0

# Verification token TTL (hours). After this, the verify link is considered expired.
VERIFICATION_TOKEN_TTL_HOURS=72

# SMTP configuration for sending emails
# Use Ethereal for dev/test email preview links
MAIL_TRANSPORT=ethereal
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL="BKSB Elternsprechtag <no-reply@bksb.example>"
